<odoo>
    <record id="view_norma_tree" model="ir.ui.view">
        <field name="name">norma.management.tree</field>
        <field name="model">norma.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id_norma"/>
                <field name="nro_norma"/>
                <field name="edicion"/>
                <field name="tipo"/>
                <field name="fecha"/>
                <field name="resumen"/>
            </tree>
        </field>
    </record>

    <record id="view_norma_form" model="ir.ui.view">
        <field name="name">norma.management.form</field>
        <field name="model">norma.management</field>
        <field name="arch" type="xml">
            <form string="Norma">
                <sheet>
                    <group>
                        <field name="id_norma"/>
                        <field name="nro_norma"/>
                        <field name="edicion"/>
                        <field name="tipo"/>
                        <field name="fecha"/>
                        <field name="resumen"/>
                        <field name="text"/>
                        <field name="archivo_pdf" filename="nro_norma_pdf"/>
                        <field name="archivo_doc" filename="nro_norma_doc"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>